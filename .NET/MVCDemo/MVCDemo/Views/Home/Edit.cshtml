@model MVCDemo.Models.Student;
@{
    Layout="~/Views/Shared/Master.cshtml";
}

<div class="table-responsive">
    <form method="post" action="/Home/Edit">
        <table class="table table-bordered">
            <tbody>
                <tr>
                    <td>
                        Name
                    </td>
                    <td>
                        <input type="hidden" name="No" value="@Model.No" />
                        <input type="text" name="Name" placeholder="@Model.Name" />
                    </td>
                    <td style="color:red">
                        @Html.ValidationMessage("Name")
                    </td>

                </tr>
                <tr>
                    <td>
                        Address
                    </td>
                    <td> <input type="text" name="Address" placeholder="@Model.Address" /></td>
                    <td style="color:red">
                        @Html.ValidationMessage("Address")
                    </td>
                </tr>
                <tr>
                    <td>
                        Age
                    </td>
                    <td> <input type="text" name="Age" placeholder="@Model.Age" /></td>
                    <td style="color:red">
                        @Html.ValidationMessage("Age")
                    </td>
                </tr>
                <tr>
                    <td>
                        Email
                    </td>
                    <td> <input type="text" name="Email" placeholder="@Model.Email" /></td>
                    <td style="color:red">
                        @Html.ValidationMessage("Email")
                    </td>
                </tr>
                <tr>
                    <td colspan="3" align="center">
                        <input type="submit" value="Update" class="btn btn-primary" />
                </tr>
            </tbody>
        </table>
        <hr />
        <p class="alert-danger">
            @ViewBag.Message
        </p>
    </form>


</div>