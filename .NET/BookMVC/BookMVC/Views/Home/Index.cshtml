@model List<BookMVC.Models.Book>

@{
    Layout = "~/Views/Shared/Master.cshtml";
}

<h2>Book List</h2>

<table border="1" cellpadding="8" cellspacing="0" width="100%">
    <thead>
        <tr style="background-color:#eaeaea">
            <th>Book Id</th>
            <th>Title</th>
            <th>Author</th>
            <th>Category</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>

    <tbody>
        @if (Model != null && Model.Count > 0)
        {
            foreach (var book in Model)
            {
                <tr>
                    <td>@book.BookId</td>
                    <td>@book.Title</td>
                    <td>@book.Author</td>
                    <td>@book.Category</td>
                    <td>@book.Price</td>
                    <td>@book.Quantity</td>

                    <td>
                        @if (book.InStock)
                        {
                            <span style="color:green;font-weight:bold">In Stock</span>
                        }
                        else
                        {
                            <span style="color:red;font-weight:bold">Out of Stock</span>
                        }
                    </td>

                    <td>
                        <a href="/Books/Edit/@book.BookId">Edit</a> |
                        <a href="/Books/Delete/@book.BookId"
                           onclick="return confirm('Are you sure you want to delete this book?')">
                            Delete
                        </a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="8" style="text-align:center;color:red">
                    No books available
                </td>
            </tr>
        }
    </tbody>
</table>

<br />

<a href="/Home/Create">➕ Add New Book</a>
