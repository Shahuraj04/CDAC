@model List<TrainMVC.Models.Train>

@{
    Layout = "~/Views/Shared/Master.cshtml";

}

<body class="container mt-4">

    <h2 class="mb-3">Train List</h2>
    <a href="/Home/Create" class="btn btn-primary">Add New Record</a>
    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>TrainId</th>
                <th>Train Name</th>
                <th>Source</th>
                <th>Destination</th>
                <th>Departure Time</th>
                <th>Arrival Time</th>
                <th>Available Seats</th>
                <th></th>
                <th></th>

            </tr>
        </thead>

        <tbody>
            @foreach (var train in Model)
            {
                <tr>
                    <td>@train.TrainId</td>
                    <td>@train.TrainName</td>
                    <td>@train.Source</td>
                    <td>@train.Destination</td>
                    <td>@train.DepartureTime.ToString("dd-MM-yyyy HH:mm")</td>
                    <td>@train.ArrivalTime.ToString("dd-MM-yyyy HH:mm")</td>
                    <td>@train.AvailableSeats</td>
                    <td>
                        <a href="/Home/Edit/@train.TrainId" class="btn btn-warning">Edit</a>
                    </td>
                    <td>
                        <a href="/Home/Delete/@train.TrainId" class="btn btn-danger">Delete</a>
                    </td>

                </tr>
            }
        </tbody>
    </table>

</body>
</html>
