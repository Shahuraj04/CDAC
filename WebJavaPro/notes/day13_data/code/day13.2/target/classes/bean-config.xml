<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!--Add Spring bean definitions here -->
	<!-- dependency beans -->
	<!-- eng singleton eager -->
	<bean id="eng" class="com.cdac.dependency.EnglishTeacher" />
	<!-- maths singleton lazy -->
	<bean id="maths" class="com.cdac.dependency.MathsTeacher"
		lazy-init="true" />
	<!-- sc prototype -->
	<bean id="sc" class="com.cdac.dependency.ScienceTeacher"
		scope="prototype"/>
	<!-- dependent bean -->
	<!-- public_school singleton n eager -->
	<bean id="public_school" class="com.cdac.dependent.PublicSchool"
		init-method="myInit" destroy-method="myDestroy" scope="prototype">
		<!-- Child tag for Constructor based D.I -->
		<constructor-arg name="myTeacher" ref="sc" />
	</bean>



</beans>